<body id="LoginForm">
<div class="container">
<h1 class="form-heading">Signup Form</h1>
<div class="login-form">
<div class="main-div">
    <div class="panel">

   <p>Please enter your detail</p>
   </div>
   <div>
   	<% if (success == 'false'){ %> 
    <%=errors.length%><!-- 
     <% for (var i = 0; i < errors.length; i++) {%>
      <%=errors[i].msg%>
