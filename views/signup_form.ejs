        <div class="form-group">
            <input type="text" class="form-control" name="name" id="inputUname" placeholder="User name">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
        </div>

        <div class="form-group">

            <input type="password" class="form-control" name="cfpassword" id="inputCpassword" placeholder="Confirm password">

        </div>
        <div>
          <button type="submit" class="btn btn-primary">Signup</button>
        </div>
        
    </form>
    <div>
        <a href="login"><button type="submit" class="btn btn-info">Log in</button></a>
        </div>
    </div>

</div></div></div>


